<?xml version='1.0' encoding='utf-8'?>
<widget id="com.sheltermanager.asm" version="0.0.3" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>sheltermanager</name>
    <description>
        sheltermanager.com mobile application
    </description>
    <author email="support@sheltermanager.com" href="http://sheltermanager.com">
        sheltermanager.com team
    </author>
    <content src="index.html" />
    <icon src="www/img/logo-144.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />

    <platform name="android">
        <allow-intent href="market:*" />
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/logo-180.png" width="180" height="180" />
        <icon src="www/img/logo-60.png" width="60" height="60" />
        <icon src="www/img/logo-76.png" width="76" height="76" />
        <icon src="www/img/logo-152.png" width="152" height="152" />
        <icon src="www/img/logo-40.png" width="40" height="40" />
        <icon src="www/img/logo-80.png" width="80" height="80" />
        <icon src="www/img/logo-57.png" width="57" height="57" />
        <icon src="www/img/logo-114.png" width="114" height="114" />
        <icon src="www/img/logo-29.png" width="29" height="29" />
        <icon src="www/img/logo-58.png" width="58" height="58" />
        <icon src="www/img/logo-50.png" width="50" height="50" />
        <icon src="www/img/logo-100.png" width="100" height="100" />
    </platform>

</widget>
